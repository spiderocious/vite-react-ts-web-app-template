# ================================
# Frontend Template Environment Variables
# ================================
# Copy this file to .env.local and customize for your environment

# ================================
# üéØ FEATURE FLAGS
# ================================
# Enable mock services instead of real APIs (true/false)
VITE_USE_MOCK=true

# Enable Sentry error tracking (true/false)
VITE_USE_SENTRY=false

# Disable console.log in production (true/false)
VITE_DISABLE_CONSOLE_LOG=false

# Enable React Query DevTools (true/false)
VITE_ENABLE_DEVTOOLS=true

# Enable analytics tracking (true/false)
VITE_USE_ANALYTICS=false

# ================================
# üåê API CONFIGURATION
# ================================
# Base URL for your main API
VITE_API_BASE_URL=https://api.example.com/v1

# Base URL for authentication endpoints
VITE_AUTH_BASE_URL=https://auth.example.com

# WebSocket URL for real-time features
VITE_WS_URL=wss://ws.example.com

# CDN URL for static assets
VITE_CDN_URL=https://cdn.example.com

# ================================
# üîê AUTHENTICATION
# ================================
# JWT token expiration time (in minutes)
VITE_TOKEN_EXPIRY=60

# Refresh token expiration time (in days)
VITE_REFRESH_TOKEN_EXPIRY=7

# ================================
# üìä MONITORING & ANALYTICS
# ================================
# Sentry DSN for error tracking
VITE_SENTRY_DSN=

# Environment name for Sentry (development/staging/production)
VITE_SENTRY_ENVIRONMENT=development

# Google Analytics tracking ID
VITE_GA_TRACKING_ID=

# Hotjar site ID
VITE_HOTJAR_ID=

# ================================
# üé® UI CONFIGURATION
# ================================
# Application name displayed in UI
VITE_APP_NAME=Frontend Template

# Application version
VITE_APP_VERSION=1.0.0

# Default theme (light/dark/system)
VITE_DEFAULT_THEME=system

# ================================
# ‚ö° PERFORMANCE
# ================================
# API request timeout (in milliseconds)
VITE_API_TIMEOUT=10000

# Mock API delay simulation (in milliseconds)
VITE_MOCK_DELAY=1000

# Maximum file upload size (in MB)
VITE_MAX_FILE_SIZE=10

# ================================
# üß™ DEVELOPMENT
# ================================
# Show development debug information
VITE_DEBUG_MODE=false

# Enable React strict mode
VITE_STRICT_MODE=true

# Hot reload port (Vite default is 5173)
VITE_PORT=3001
